<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
       
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
        <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
    </head>
    <body>  
    

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
          <div class="container-fluid">
            <a class="navbar-brand" href="#">{{'MetaUnivers'|trans}}</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
              <ul class="navbar-nav me-auto">
                <li class="nav-item">
                  <a class="nav-link active" href="/">{{'Bienvenue'|trans}}
                    <span class="visually-hidden">(current)</span>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">{{'Publier un article'|trans}}</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">{{'Connexion'|trans}}</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">{{'Liste des cryptos'|trans}}</a>
                </li>
                 <li class="nav-item">
                  <a class="nav-link" href="#">{{'Sur Nous'|trans}}</a>

                </li>
                
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                  <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">{{'Action'|trans}}</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Separated link</a>
                  </div>
                </li>
              </ul>
              <ul class="navbar-nav me-auto">
                {% for locale in locales %} 
                {% if locale != app.request.locale  %}
                 <li class="nav-item">
                  <a class="nav-link active" href="{{ path('change_locale',{'locale': locale}) }} "><img src="{{ asset('img/'~locale~'.png') }}" alt="{{locale}}">{{locale}}
                   </a>
                </li>
                {% endif %}
                {% endfor %}
               
               </ul>
             </div>
          </div>
        </nav>


  <div class="container">
      {% block body %}{% endblock %}
  </div>
    </body>
</html>
